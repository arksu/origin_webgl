{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "node_modules/@types/node/globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
